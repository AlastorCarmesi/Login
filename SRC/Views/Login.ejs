<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login</title>
    <%- include('./Style/head') %>
  </head>
  <body class="login">
    <div class="container">
      <div class="col-sm-6 mx-auto">
        <div class="card mt-5">
          <div class="card-body">
            <!-- messages -->
            <h1 class="text-center">
              <span class="fa fa-sign-in"></span> Login
            </h1>
            <% if (message.length > 0) { %>
              <div class="alert alert-danger">
                <%= message %>
              </div>
            <% } %>

            <!-- form -->
            <form action="/Login" method="post">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="Email" class="form-control">
              </div>
              <div class="form-group">
                <label for="password">Contrase√±a</label>
                <input type="password" name="Cont" class="form-control">
              </div>
              <input type="submit" class="btn btn-dark btn-lg">
            </form>

            <hr>
            <div class="text-center">
              <p>Necesitas una cuenta? <a href="/Registro">Registrate</a></p>
              <p>Regresa <a href="/index">Home</a>.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>